{
    "name": "hkulekci/turkish-stemmer-php",
    "description": "Turkish Language Stemmer for PHP",
    "type": "library",
    "license": "Apache-2.0",
    "version": "2.0.0",
    "authors": [
        {
            "name": "Haydar KULEKCI",
            "email": "haydarkulekci@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0 || ^8.1 || ^8.2 || ^8.3",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "TurkishStemmer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TurkishStemmerTest\\": "src/"
        }
    },
    "scripts": {
        "coverage": "composer test -- --coverage-html ./coverage-report",
        "test": "phpunit -c ./phpunit.xml"
    },
    "repositories": [
       { "type": "vcs", "url": "https://github.com/mcakici/turkish-stemmer-php" }
    ]
}
